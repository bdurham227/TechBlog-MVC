  {{#if posts.length}}
  <div class="col-md-6 project-list">
    <h3>Your Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}


<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{posts.user.username}}!</h2>
  </div>
</div>

<div class="card">

  <div class="card-header">Create a New Post</div>

  <form class="form new-post-form">
    <div class="form-group p-2">
      <label for="post-title">Title:</label>
      <input class="form-input" type="text" id="post-title" name="post-title" />
    </div>

    <div class="form-group p-2">
      <label for="post-content">Content:</label>
      <textarea class="form-input" id="post-content" name="post-content"></textarea>
    </div>


    <div class="form-group p-2">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>

</div>

 